{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "baseUrl": "src/",
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./dist/"
    ]
  }