{
    "name": "lost-phone",
    "version": "1.0.0",
    "description": "A Lost-Phone Project using Rollup and TypeScript",
    "main": "src/game.ts",
    "scripts": {
        "build": "parcel build src/index.html --out-dir dist",
        "watch": "parcel src/index.html -p 8000"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devlostphone/lost-phone.git"
    },
    "author": "Lost Phone Developers",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/devlostphone/lost-phone/issues"
    },
    "homepage": "https://github.com/devlostphone/lost-phone",
    "devDependencies": {
        "@types/qrcode": "^1.4.1",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "eslint": "^6.8.0",
        "minimist": ">=1.2.2",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-clean-easy": "^1.0.2",
        "parcel-plugin-static-files-copy": "^2.4.3",
        "phaser": "^3.54.0",
        "qrcode": "^1.4.4",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "config": "^3.3.6",
        "lib": "^4.3.3"
    },
    "parcelCleanPaths": [
        "dist"
    ],
    "staticFiles": {
        "staticPath": [
            {
                "staticPath": "src/assets",
                "staticOutDir": "assets"
            },
            {
                "staticPath": "src/config",
                "staticOutDir": "config"
            },
            {
                "staticPath": "src/lang",
                "staticOutDir": "lang"
            }
        ],
        "watcherGlob": "**"
    }
}
