{
    "name": "lost-phone",
    "version": "1.0.0",
    "description": "A Lost-Phone Project using Parcel and TypeScript",
    "main": "src/game.ts",
    "scripts": {
        "build": "parcel build src/index.html --out-dir dist --public-url ./",
        "watch": "parcel watch src/index.html --out-dir dist --public-url ./"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devlostphone/lost-phone.git"
    },
    "author": "Lost Phone Developers",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/devlostphone/lost-phone/issues"
    },
    "homepage": "https://github.com/devlostphone/lost-phone",
    "devDependencies": {
        "@types/qrcode": "^1.4.2",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "eslint": "^8.11.0",
        "minimist": ">=1.2.5",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-clean-easy": "^1.0.2",
        "parcel-plugin-static-files-copy": "^2.6.0",
        "phaser": "^3.55.2",
        "qrcode": "^1.5.0",
        "typescript": "^4.6.2"
    },
    "parcelCleanPaths": [
        "dist"
    ],
    "staticFiles": {
        "staticPath": [
            {
                "staticPath": "gamedata",
                "staticOutDir": "gamedata"
            },
            {
                "staticPath": "lang",
                "staticOutDir": "lang"
            },
            {
                "staticPath": "themes",
                "staticOutDir": "themes"
            }
        ],
        "watcherGlob": "**"
    }
}
